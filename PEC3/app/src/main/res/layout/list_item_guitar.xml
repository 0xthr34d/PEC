<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/marginTopBottom_item_list"
    android:layout_marginBottom="@dimen/marginTopBottom_item_list"
    android:layout_marginRight="@dimen/marginRightLeft_item_list"
    android:layout_marginLeft="@dimen/marginRightLeft_item_list"
    >

    <ImageView
        android:id="@+id/photo_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:adjustViewBounds="true"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_bar_height"
        android:padding="@dimen/info_bar_padding"
        android:gravity="center_vertical"
        android:background="@color/background_color_bar_item">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/icon_name_imageview"
                android:layout_width="@dimen/ico_info_item_bar_width"
                android:layout_height="wrap_content"
                android:src="@drawable/guitar_icon"/>
            <TextView
                android:id="@+id/name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_item"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/rating_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_item"/>
            <ImageView
                android:id="@+id/icon_rating_imageview"
                android:layout_width="@dimen/ico_info_item_bar_width"
                android:layout_height="wrap_content"
                android:src="@drawable/guitar_pick_icon"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>