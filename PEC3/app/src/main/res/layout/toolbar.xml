<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar_list_guitar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color_toolbar"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="@dimen/guitar_icon_toolbar_width"
        android:layout_height="@dimen/guitar_icon_toolbar_height"
        android:src="@drawable/guitar_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/black"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:text="@string/app_name"/>

</androidx.appcompat.widget.Toolbar>